<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".SuaPhongActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỬA THÔNG TIN PHÒNG"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tên Phòng:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtTenPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text" />
        <requestFocus />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tiền Cọc:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtTienCoc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="3000000"
            android:gravity="center"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="đồng"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Lầu:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtLau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Số Điện:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtSoDien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Số Nước:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtSoNuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Trạng Thái:"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spnTrangThaiSua"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">



        <Button
            android:id="@+id/btnLuuPhong"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lưu" />


    </LinearLayout>

</LinearLayout>