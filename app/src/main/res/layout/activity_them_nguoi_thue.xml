<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp"
    tools:context=".ThemNguoiThueActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÊM NGƯỜI THUÊ"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tên NT:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtTenNguoiThue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                />
            <requestFocus />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Giới tính:"
                android:textSize="20dp" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:id="@+id/rdoGioiTinh">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:id="@+id/rdoNam"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:id="@+id/rdoNu"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Ngày sinh:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtNgaySinh"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:enabled="false"
                android:gravity="center"
                android:text="17/10/1998"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn"
                android:id="@+id/btnChonNgaySinh"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="CMND:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtCMND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="15"
                app:counterMaxLength="15"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SDT:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtSDTNguoiThue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="11"
                app:counterMaxLength="11"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Ngày Thuê:"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edtNgayThue"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:enabled="false"
                android:gravity="center"
                android:text="1/1/2019"
                android:textSize="25dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn"
                android:id="@+id/btnChonNgayThue"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Thuê phòng:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edtPhongThue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:enabled="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp"
            >
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnThemNguoiThue"
                android:text="Thêm"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>